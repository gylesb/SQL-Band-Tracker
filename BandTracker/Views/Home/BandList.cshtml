@{
  Layout = "_Layout";
}

<body>
  <h1>List of Bands</h1>
  <hr>
  <table>
    <tr>
      <th>Name</th>
      <th>Id</th>
    </tr>
    @foreach (var band in @Model)
    {
      <tr>
      <td><a href="/band/@band.GetId()/venues">@band.GetName()</a></td>
      <td>@band.GetId()</td>
      </tr>
    }
  </table>
<br>
  <a href="/venues/">View Venues</a><br>
  <a href="/band/add">Add Band</a><br>
  <a href="/">Home</a>

<br>
</body>
