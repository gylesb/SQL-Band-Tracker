@{
  Layout = "_Layout";
}

<body>
  <h1>List of Venues</h1>
  <hr>
  <table>
    <tr>
      <th>Name</th>
      <th>Id</th>
    </tr>
    @foreach (var venue in @Model)
    {
      <tr>
      <td><a href="/venue/@venue.GetId()/bands">@venue.GetName()</a></td>
      <td>@venue.GetId()</td>
      </tr>
    }
  </table>
  <br>

  <a href="/bands/">View Bands</a><br>
  <a href="/venue/add">Add Venue</a><br>
  <a href="/">Home</a>

</body>
